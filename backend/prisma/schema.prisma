// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(auto()) @map("_id") @db.ObjectId
  email         String          @unique
  name          String?
  passwordHash  String
  createdAt     DateTime        @default(now())
  
  // Relações (O usuário é "dono" de tudo)
  origins       Origin[]
  debtors       Debtor[]
  expenses      Expense[]
  salaryHistory SalaryHistory[]
}

// v5.2 state.origins
model Origin {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  type    String   // "Cartão" ou "Conta"
  dueDay  String?  // Armazenado como string para flexibilidade (ex: "N/A")
  limit   Float?   // Limite do cartão
  
  // Relação com User
  userId  String   @db.ObjectId
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Relação com Expenses
  expenses Expense[]
  
  @@index([userId])
}

// v5.2 state.debtors
model Debtor {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  
  // Relação com User
  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Relação com Expenses
  expenses Expense[]
  
  @@index([userId])
}

// v5.2 state.expenses
model Expense {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  date        DateTime // Data do lançamento
  description String
  category    String
  parcela     String   // "Único", "1/12", "Mensal"
  amount      Float    // Valor
  
  // Relação com User
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Relação com Origin (Conta/Cartão)
  originId    String   @db.ObjectId
  origin      Origin   @relation(fields: [originId], references: [id])
  
  // Relação com Debtor (Opcional)
  debtorId    String?  @db.ObjectId
  debtor      Debtor?  @relation(fields: [debtorId], references: [id])
  
  @@index([userId, date])
  @@index([originId])
  @@index([debtorId])
}

// v5.2 state.salaryHistory
model SalaryHistory {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  month      String   // Formato "YYYY-MM"
  hours      Float
  hourRate   Float
  taxRate    Float
  cnae       String?
  
  // Relação com User
  userId     String   @db.ObjectId
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Campos calculados (gross, net, tax) podem ser calculados na API
  // ou armazenados aqui se necessário para relatórios
  
  @@unique([userId, month]) // Garante 1 registro por mês/usuário
}