# Cloud-first environment variables (no local infra required)
# Copy to .env and fill with your cloud credentials (do not commit secrets)

NODE_ENV=development
PORT=4000

# MongoDB Atlas
DATABASE_URL="mongodb+srv://<user>:<password>@<cluster-host>/<database>?retryWrites=true&w=majority"

# JWT secret (dev only â€” use a strong secret in production)
JWT_SECRET="dev_jwt_secret_change_me"

# RabbitMQ (CloudAMQP)
RABBIT_URL="amqps://<user>:<password>@<host>/<vhost>"

# Redis (prefer Upstash; fallback to REDIS_URL when set)
UPSTASH_REDIS_REST_URL="https://<id>.upstash.io"
UPSTASH_REDIS_REST_TOKEN="<token>"
REDIS_URL=""
REDIS_HOST=""
REDIS_PORT=""

# Resend (transactional e-mail)
RESEND_API_KEY=""
AUTH_EMAIL_FROM="Finfy <no-reply@your-domain.com>"
AUTH_VERIFY_URL_BASE=""
AUTH_EMAIL_PROVIDER=resend
AUTH_EMAIL_VERIFICATION_REQUIRED=true
AUTH_EMAIL_VERIFICATION_ENQUEUE_ENABLED=true
AUTH_EMAIL_VERIFICATION_TOKEN_TTL_MINUTES=1440
AUTH_EMAIL_VERIFICATION_RESEND_WINDOW_SECONDS=600

# Google OAuth2 (same client ID used by the frontend)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
AUTH_GOOGLE_ENABLED=true
AUTH_ACCOUNT_LINK_ENABLED=true

# Frontend origin (CORS/CSP)
FRONTEND_ORIGIN="http://localhost:5173"
COOKIE_DOMAIN="localhost"
SECURITY_MODE=relaxed

# Seeds (dev only)
ENABLE_DEV_SEED=false

# CI fallback
# Workflows inject stub values so Zod validation passes during tests
