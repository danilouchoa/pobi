# Example environment variables for local development
# Copy to .env and fill in as needed

# MongoDB connection string (host network, 3-node replica set)
DATABASE_URL="mongodb://localhost:27017,localhost:27018,localhost:27019/finance_app_db?replicaSet=rs0&retryWrites=true&w=majority"

# JWT secret for dev only
JWT_SECRET="dev_jwt_secret_change_me"

# Upstash Redis (leave blank for local Redis)
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# Resend API key (leave blank for dev)
RESEND_API_KEY=""

# RabbitMQ (host network)
RABBIT_URL=amqp://localhost:5672

# Redis (host network via @redis/client)
REDIS_URL=redis://localhost:6379

# Habilita seed de desenvolvimento (não usar em produção)
ENABLE_DEV_SEED=false

# Google OAuth2 (required for Google login)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Frontend origin (used for CORS + CSP) - required
FRONTEND_ORIGIN="http://localhost:5173"

# Optional cookie domain for production (e.g. .uchoa.app)
COOKIE_DOMAIN=""

# CI fallback
# Workflows inject stub values (ci-backend.yml / ci-frontend.yml) so Zod validation passes during tests
